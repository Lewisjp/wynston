<!-- Update fields to reflect the wireframe -->
<%= form_for (@course) do |f| %>
  
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :intro_video %><br />
    <%= f.text_field :intro_video %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :language %><br />
    <%= f.text_field :language %>
  </div>
  <div class="field">
    <%= f.label :hours %><br/>
    <%= f.text_field :hours %>
  </div>

  <%= f.fields_for :assessments do |builder| %>
    <%= render "question_fields", :f => builder %>
  <% end %>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>