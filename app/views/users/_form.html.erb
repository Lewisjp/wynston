<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </div>
  <div class="field">
    <%= f.label :about_me %><br>
    <%= f.text_area :about_me %>
  </div>
  <div class="field">
    <%= f.label :education %><br>
    <%= f.select :education, ['High School', 'Associate', 'Bachelor', 'Master', 'Ph.D.', 'JD', 'MD'] %>
  </div>
  <div class="field">
    <%= f.label :phone %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :location %><br>
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.select :gender, ['', 'Female', 'Male'] %>
  </div>
  <div class="field">
    <%= f.label :birthday %><br>
    <%= f.date_select :birthday ,:start_year => 1980, :end_year => 2014 %>
  </div>
  <div class="field">
    <%= f.label :picture %><br>
    <%= image_tag current_user.picture %><br><br>
    <%= f.file_field :picture %>
  </div>
  <div class="field">
    <%= f.label :remote_picture_url, "or image URL" %><br />
    <%= f.text_field :remote_picture_url %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
